#!/bin/bash

COLOR1="\033[38;5;213m"  # Bright magenta-pink
RESET="\033[0m"

# ASCII logo lines
ascii_logo=(
"$COLOR1                     ooooos"
"$COLOR1                 os   o  o    s"
"$COLOR1            oo       s    s       ss"
"$COLOR1        oooo     o            o     ssss"
"$COLOR1       o    oo                    os    s"
"$COLOR1      oo  o                          s  ss"
"$COLOR1     o o o        oooooooooooo        s s s"
"$COLOR1       o s       ooooooooooooo        s s"
"$COLOR1    s  oo        oooooooooooooo        oo  s"
"$COLOR1   o   o         ooooos  oooooo         o   s"
"$COLOR1  o    o        soooo     soooo         o    s"
"$COLOR1     os         oooo       soooo         so"
"$COLOR1              ooosss   sssoooo              o"
"$COLOR1     ss        oooo          ooos        so"
"$COLOR1  s    s       oooo          oooo       o    o"
"$COLOR1   s   s       ooo            ooo       o   o"
"$COLOR1    s  ss     oooo            ooos     oo  s"
"$COLOR1       s s  soooos            sooooo  s o"
"$COLOR1     s s s                            o o o"
"$COLOR1      ss  s                          o  oo"
"$COLOR1       s    ss                    oo    o"
"$COLOR1        #sss     s            o     oooo"
"$COLOR1            ss       s    s       oo"
"$COLOR1                 ss   s  o    o"
"$COLOR1                     ssssss"
)

# AxOS banner lines
banner_lines=(
"░█████╗░██╗░░██╗░█████╗░░██████╗"
"██╔══██╗╚██╗██╔╝██╔══██╗██╔════╝"
"███████║░╚███╔╝░██║░░██║╚█████╗░"
"██╔══██║░██╔██╗░██║░░██║░╚═══██╗"
"██║░░██║██╔╝╚██╗╚█████╔╝██████╔╝"
"╚═╝░░╚═╝╚═╝░░╚═╝░╚════╝░╚═════╝░"
)

# Determine max line count
max_lines=${#ascii_logo[@]}
[ ${#banner_lines[@]} -gt $max_lines ] && max_lines=${#banner_lines[@]}

echo

# Print ASCII + banner side-by-side
for ((i = 0; i < max_lines; i++)); do
    left="${ascii_logo[i]:-}"
    right="${banner_lines[i]:-}"
    printf "%-50s  ${COLOR1}%-40s${RESET}\n" "$left" "$right"
done

echo

# ───── System Info Box ─────
OS="AxOS (Arch-based)"
KERNEL="$(uname -r)"
UPTIME="$(uptime -p | sed 's/up //')"
SHELL="$SHELL"
WM="${XDG_CURRENT_DESKTOP:-$DESKTOP_SESSION}"
TERM="$TERM"
CPU="$(grep -m1 'model name' /proc/cpuinfo | cut -d ':' -f2 | xargs | cut -c1-22)"
RAM="$(free -h | awk '/Mem:/ {print $3 "/" $2}')"
PKGS="$(pacman -Q | wc -l)"
DISK="$(df -h / | awk 'NR==2 {print $3 "/" $2}')"

# Info box (width = 76)
echo -e "${COLOR1}╭──────────────────────────────────────────────────────────────╮${RESET}"
printf "${COLOR1}│${RESET} OS: %-21s Kernel: %-17s Uptime: %-10s ${COLOR1}│\n" "$OS" "$KERNEL" "$UPTIME"
printf "${COLOR1}│${RESET} Shell: %-18s WM/DE: %-17s Terminal: %-9s ${COLOR1}│\n" "$SHELL" "$WM" "$TERM"
printf "${COLOR1}│${RESET} CPU: %-22s RAM: %-12s Packages: %-6s ${COLOR1}│\n" "$CPU" "$RAM" "$PKGS"
printf "${COLOR1}│${RESET} Storage: %-57s ${COLOR1}│\n" "$DISK"
echo -e "${COLOR1}╰──────────────────────────────────────────────────────────────╯${RESET}"
