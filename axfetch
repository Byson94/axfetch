#!/bin/bash

COLOR="\033[38;5;213m"        # Magenta-pink (AxOS color)
BOLD_COLOR="\033[1;38;5;213m" # Bold magenta-pink
RESET="\033[0m"
SCRIPT_DIR="$(dirname "$(realpath "$0")")"

# ASCII logo
read -r -d '' LOGO <<'EOF'
$1                     ooooos
$1                 os   o  o    s
$1            oo       s    s       ss
$1        oooo     o            o     ssss
$1       o    oo                    os    s
$1      oo  o                          s  ss
$1     o o o        oooooooooooo        s s s
$1       o s       ooooooooooooo        s s
$1    s  oo        oooooooooooooo        oo  s
$1   o   o         ooooos  oooooo         o   s
$1  o    o        soooo     soooo         o    s
$1     os         oooo       soooo         so
$1              ooosss   sssoooo              o
$1     ss        oooo          ooos        so
$1  s    s       oooo          oooo       o    o
$1   s   s       ooo            ooo       o   o
$1    s  ss     oooo            ooos     oo  s
$1       s s  soooos            sooooo  s o
$1     s s s                            o o o
$1      ss  s                          o  oo
$1       s    ss                    oo    o
$1        #sss     s            o     oooo
$1            ss       s    s       oo
$1                 ss   s  o    o
$1                     ssssss
EOF

# AxOS Banner
read -r -d '' BANNER <<'EOF'
░█████╗░██╗░░██╗░█████╗░░██████╗
██╔══██╗╚██╗██╔╝██╔══██╗██╔════╝
███████║░╚███╔╝░██║░░██║╚█████╗░
██╔══██║░██╔██╗░██║░░██║░╚═══██╗
██║░░██║██╔╝╚██╗╚█████╔╝██████╔╝
╚═╝░░╚═╝╚═╝░░╚═╝░╚════╝░╚═════╝░
EOF

# System info
OS="AxOS (Arch-based)"
KERNEL="$(uname -r)"
UPTIME="$(uptime -p | sed 's/^up //')"
SHELL="$SHELL"
WM="${XDG_CURRENT_DESKTOP:-$DESKTOP_SESSION}"
TERM="$TERM"
CPU="$(grep -m1 'model name' /proc/cpuinfo | cut -d ':' -f2 | xargs)"
RAM="$(free -h | awk '/Mem:/ {print $3 "/" $2}')"
PKGS="$(pacman -Q | wc -l)"
DISK="$(df -h / | awk 'NR==2 {print $3 "/" $2}')"

# Print logo
echo -e "$COLOR"
echo "$LOGO" | sed "s/\$1/$COLOR/g"
echo -e "$RESET"

# Print banner
echo -e "$COLOR$BANNER$RESET"
echo

# System Info (same layout as the sketch you uploaded)
echo -e "${COLOR}──────────────────────────────────────────────────────────────╮"
printf "│ ${BOLD_COLOR}OS:${RESET} %s  ${BOLD_COLOR}Kernel:${RESET} %s  ${BOLD_COLOR}Uptime:${RESET} %s │\n" "$OS" "$KERNEL" "$UPTIME"
printf "│ ${BOLD_COLOR}Shell:${RESET} %s  ${BOLD_COLOR}WM/DE:${RESET} %s  ${BOLD_COLOR}Terminal:${RESET} %s │\n" "$SHELL" "$WM" "$TERM"
printf "│ ${BOLD_COLOR}CPU:${RESET} %s  ${BOLD_COLOR}RAM:${RESET} %s  ${BOLD_COLOR}Packages:${RESET} %s │\n" "$CPU" "$RAM" "$PKGS"
printf "│ ${BOLD_COLOR}Storage:${RESET} %s │\n" "$DISK"
echo -e "${COLOR}╰──────────────────────────────────────────────────────────────╯${RESET}"
